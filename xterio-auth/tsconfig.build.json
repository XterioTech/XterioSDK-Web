{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist/types",
    "paths": {
      "*": [
        "./src/*"
      ],
      "interfaces/*": [
        "./src/interfaces/*"
      ],
      "modules/*": [
        "./src/modules/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "example",
    "./package.json",
    "./src/main.ts",
    "./src/__test__"
  ]
}